  $items['toolbar_primary_section'] = [
    'variables' => [
      'title' => NULL,
      'links' => NULL,
    ],
  ];

  $items['toolbar_primary_section_tab'] = [
    'variables' => [
      'id' => NULL,
      'title' => NULL,
      'url' => NULL,
      'active' => FALSE,
